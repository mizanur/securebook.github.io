{
	"compilerOptions": {
		"target": "esnext",
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": true,
		"strict": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"jsx": "react",
		"jsxFactory": "h",
		"strictPropertyInitialization": false,
		"types": ["node", "webpack-env"],
		"baseUrl": ".",
		"paths": {
			"@editor/*": ["src/editor/*"],
			"@errors/*": ["src/errors/*"],
			"@assets/*": ["assets/*"],
			"@configs/*": ["src/configs/*"],
			"@styles/*": ["src/styles/*"],
			"@interfaces/*": ["src/interfaces/*"],
			"@data/*": ["src/data/*"],
			"@components/*": ["src/components/*"],
			"@modules/*": ["src/modules/*"],
			"@utils/*": ["src/utils/*"],
			"@view/*": ["src/view/*"],
		},
        "typeRoots": [
            "node_modules/@types",
            "./src/typings"
        ]
	},
	"include": [
		"src"
	]
}